<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global">
    
    <aura:attribute name="item" type="Camping_Item__c"/>

    <!-- CREATE ITEM FORM -->
    <form class="slds-form--stacked" aura:id="itemForm"> 
        <lightning:input label="Item Name"
                         name="itemName"
                         required="true"
                         class="slds-col slds-size_1-of-3"/>   
                         
        <lightning:input label="Quantity"
                         name="itemQuantity"
                         type="number"                        
                         required="true"
                         class="slds-col slds-size_1-of-12"/>  

        <lightning:input label="Price"
                         name="itemPrice"                       
                         required="true"
                         class="slds-col slds-size_1-of-12"/>     

        <lightning:button label="Insert Item" 
                          class="slds-m-top--medium"
                          variant="brand"
                          onclick=""/>
    </form>
    <!-- / CREATE ITEM FORM -->

</aura:component>	
